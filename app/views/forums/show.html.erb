<table class="table table-striped table-bordered">  
 <thead>
  <tr>  
    <th>Topic Title</th>  
    <th>Replies</th>  
    <th>Last Post</th>  
  </tr>  
  </thead>
  <tbody>
  <% for topic in @topics %>  
    <tr>  
      <td><%= link_to h(topic.name), forum_topic_path(@forum,topic) %> <br/>
        by <small> <font color="#848484"><%= topic.user.name %></font></small>
      </td> 
      <td><%= topic.posts.size %></td>  
      <td class="right">
         <%= distance_of_time_in_words_to_now topic.updated_at %> 
         <% if topic.posts.last %><br/>
         by <font color="#5882FA"><%= topic.posts.last.user.name %></font>
         <% end %>
      </td>  
      <% link_to "Edit", edit_forum_topic_path(@forum,topic) %> 
      <% link_to "Destroy", forum_topic_path(@forum,topic), :confirm => 'Are you sure?', :method => :delete %> 
    </tr>  
  <% end %>  
  </tbody>
</table>  
<button class="btn" id="new_topic_btn"><i class='icon-plus'></i>New topic</button>
<div class="new_topic_form" style='display:none'>
<%= render 'topics/form' %>
</div>
