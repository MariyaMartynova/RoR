<%= form_for Topic.new do |f| %>
  <p>  
    <%= f.label :name %>
    <%= f.text_field :name %>  
  </p>  
<% if signed_in? %>
  <%= f.hidden_field :user_id,  :value=>current_user.id %>
<% end %>
    <p>  
    <%= f.label :description %>
    <%= f.text_field :description %>  
  </p>
  <input type="hidden" name="forum_id" value="<%= params[:id] %>"/>
  
     <p> <%= f.submit "Submit",:class=>'btn' %>
<% end %>  
