<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>

  <%= stylesheet_link_tag 'application', 'grid','css/bootstrap','custom' %>
  <%= javascript_include_tag "juquery-1.7.2.min.js" %>
  <%= javascript_include_tag  "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js" %>
  <%= javascript_include_tag "jquery-rails.js" %>
 <%= javascript_include_tag "js/bootstrap.js" %>
 <%= javascript_include_tag "js/bootstrap-popover.js" %>
<%= javascript_include_tag "jquery.wookmark.js" %>
<%= javascript_include_tag "application.js" %>
  <%= csrf_meta_tag %>
</head>
<body>

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
       <div class="container-fluid">
        <div class="row span12">
         <div class="nav-collapse collapse span4"> <%= render "layouts/header" %> </div>


<div class="span4">
<form class="custom_form form-search">
    <input type="text" class="input-medium search-query">
    <button type="submit" class="btn">Search</button>
</form>
</div>
<div class="header_right span3">
<% unless signed_in? %>
<ul class="nav nav-pills">
    <li><a href="<%= signup_path %>">Have an account?</a></li>
    <li class="dropdown" >
       <a class="dropdown-toggle" data-toggle="dropdown">sign in<b class="caret"></b></a>
    </li>
</ul>

<% else %>

  <ul class="nav nav-pills"><li><%= link_to "Log out", logout_path %></li></ul>
<% end %>
</div>
</div>

</div>
       </div>

    </div>
</div>

<div class="signin_menu" id="signin_menu">
<%= render :template=>"/sessions/new/" %>
</div>


<div class="container">
<div class="row"><div class="span12">
<% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:error] %>
      <p class="error"><%= flash[:error] %></p>
<% end %>
</div></div>
<div class="row">
<%= yield %>
 
</div>


